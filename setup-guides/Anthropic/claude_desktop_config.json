{
  "mcpServers": {
    "brave-search": {
      "command": "docker",
      "args": [
        "run",    
        "-i",
        "--rm",
        "-e",
        "BRAVE_API_KEY",
        "mcp/brave-search"
      ],
      "env": {
        "BRAVE_API_KEY": "[BRAVE_API_KEY_GOES_HERE]"
      }
    },
    "fetch": {
      "command": "docker",
      "args": [
        "run",
        "-i",  
        "--rm",
        "mcp/fetch"
      ]
    },
    "filesystem": {
      "command": "docker",
      "args": [
        "run",
        "-i",
        "--rm",
	"--mount", "type=bind,src=/Users/[WHOAMI RESULT GOES HERE]/Library/CloudStorage/GoogleDrive-[EMAIL_ADDRESS_GOES_HERE],dst=/GoogleDrive",
	"--mount", "type=bind,src=/Users/[WHOAMI RESULT GOES HERE]/Library/Mobile Documents/iCloud~md~obsidian/Documents,dst=/projects/Obsidian",
	"--mount", "type=bind,src=/Users/[WHOAMI RESULT GOES HERE]/GitHub,dst=/projects/GitHub",
        "mcp/filesystem",
        "/projects"
      ]
    },
    "git": {
      "command": "docker",
      "args": [
        "run", 
        "--rm",
        "-i",
        "--mount",
        "type=bind,src=/Users/[WHOAMI RESULT GOES HERE]/GitHub,dst=/GitHub",
        "mcp/git"
      ]
    },
    "sequential-thinking": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-sequential-thinking"
      ]
    }
  }
}
